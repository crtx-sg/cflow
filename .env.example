# ComplianceFlow Docker Environment Configuration
# Copy this file to .env and update values before running docker-compose

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=complianceflow
POSTGRES_PASSWORD=complianceflow
POSTGRES_DB=complianceflow

# =============================================================================
# Security - CHANGE THESE IN PRODUCTION!
# =============================================================================
SECRET_KEY=change-me-in-production-use-strong-key
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Admin User (created on first startup)
# =============================================================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FULLNAME=Admin User

# =============================================================================
# LLM Configuration (choose one provider)
# =============================================================================
# Provider: openai, anthropic, ollama, vllm
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (alternative)
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Ollama (local, alternative)
# LLM_PROVIDER=ollama
# LLM_BASE_URL=http://host.docker.internal:11434
# LLM_MODEL=llama3.2

# =============================================================================
# OpenSpec Configuration
# =============================================================================
OPENSPEC_TIMEOUT=60

# =============================================================================
# Projects Directory (mounted volume for OpenSpec projects)
# =============================================================================
PROJECTS_DIR=./data/projects

# =============================================================================
# Debug Mode
# =============================================================================
DEBUG=false
